<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.CreateNewTicket">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cntCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="14dp"
                app:cardCornerRadius="3dp"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/card1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:text="Costumer Information"/>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            app:boxBackgroundMode="outline"
                            app:boxBackgroundColor="@android:color/white"
                            app:boxStrokeColor="@color/colorAccent">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/createNewTicketName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textPersonName"
                                android:hint="nama"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location:"/>
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/createNewTicketLocation"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            app:arrowTint="#A156B3"
                            app:popupTextAlignment="start"
                            android:backgroundTint="#E6E6E6"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            app:boxBackgroundMode="outline"
                            app:boxBackgroundColor="@android:color/white"
                            app:boxStrokeColor="@color/colorAccent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/createNewTicketIPAddress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number|numberDecimal"
                                android:digits="0123456789."
                                android:hint="IP Address"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Department:"/>
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/createNewTicketDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="4dp"
                            app:popupTextAlignment="start"
                            app:arrowTint="#A156B3"
                            android:backgroundTint="#E6E6E6"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cntCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cntCard1"
                app:cardElevation="14dp"
                app:cardCornerRadius="3dp"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/card2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:text="Ticket Information"/>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Category:"/>

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/createNewTicketCategory"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:backgroundTint="#E6E6E6"
                            app:arrowTint="#D55675"
                            app:popupTextAlignment="start"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sub-Category:"/>
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/createNewTicketSubCategory"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="4dp"
                            app:arrowTint="#D55675"
                            android:backgroundTint="#E6E6E6"
                            app:popupTextAlignment="start"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order By:"/>
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/createNewTicketOrderBy"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="4dp"
                            app:arrowTint="#D55675"
                            android:backgroundTint="#E6E6E6"
                            app:popupTextAlignment="start"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Priority:"/>
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/createNewTicketPriority"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="4dp"
                            app:arrowTint="#D55675"
                            android:backgroundTint="#E6E6E6"
                            app:popupTextAlignment="start"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assign To:"/>
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/createNewTicketAssignTo"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="4dp"
                            app:arrowTint="#D55675"
                            android:backgroundTint="#E6E6E6"
                            app:popupTextAlignment="start"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status:"/>
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/createNewTicketStatus"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="4dp"
                            app:arrowTint="#D55675"
                            android:backgroundTint="#E6E6E6"
                            app:popupTextAlignment="start"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cntCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cntCard2"
                app:cardElevation="14dp"
                app:cardCornerRadius="3dp"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/card3">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:text="Description Details"/>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            app:boxBackgroundMode="outline"
                            app:boxBackgroundColor="@android:color/white"
                            app:boxStrokeColor="@color/colorAccent">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/createNewTicketTitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:maxLength="35"
                                android:hint="title"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            app:boxBackgroundMode="outline"
                            app:boxBackgroundColor="@android:color/white"
                            app:boxStrokeColor="@color/colorAccent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/createNewTicketDesc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textMultiLine"
                                android:gravity="top"
                                android:minLines="3"
                                android:hint="description"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createNewTicketSaveBtn"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@id/cntCard3"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="SIMPAN"/>
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>