<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dataItemLinLay">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/card3"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/model1img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/circle_shape"
                    android:tint="@color/colorPrimaryDark"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/dataItem1no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/model1img"
                    android:layout_alignBottom="@+id/model1img"
                    android:layout_alignStart="@+id/model1img"
                    android:layout_alignEnd="@+id/model1img"
                    android:gravity="center"
                    android:text="123"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/dataItem1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="data"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>